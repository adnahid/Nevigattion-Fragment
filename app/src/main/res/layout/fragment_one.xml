<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_one"
    android:background="@color/teal_200"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:background="#0288D1"
                    />


                <LinearLayout
                    android:id="@+id/secondLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:weightSum="3"
                    >





                    <androidx.cardview.widget.CardView
                        android:id="@+id/bangla"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#e0e0f9"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:id="@+id/bangBImage"
                                android:src="@drawable/home_work_24"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FF000000"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="বাংলা বই"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="2dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/english"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#e0e0f9"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:id="@+id/englishBImage"
                                android:src="@drawable/home_work_24"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FF000000"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="ইংরেজি বই"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="2dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/math"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:elevation="5dp"
                        android:backgroundTint="#e0e0f9"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:id="@+id/mathBImage"
                                android:src="@drawable/home_work_24"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FF000000"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="গণিত বই"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="2dp"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>



                <ImageView
                    android:id="@+id/slider"
                    android:layout_below="@+id/secondLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/teal_700"

                    />



                <TextView
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="Others"
                    android:textColor="#009688"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@id/slider"
                    />


                <LinearLayout
                    android:id="@+id/endLayout"
                    android:layout_below="@id/other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:weightSum="4">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/arabic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/arabicBImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/home_work_24"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="ইসলামিক"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/surahBImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/home_work_24"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="সুরা"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lifeStory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/wordArabicImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/home_work_24"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="সংক্ষিপ্ত জীবনী"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                android:maxLines="1"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/story"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/storyBImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/home_work_24"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="গল্প"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/endLayoutTwo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:weightSum="4"
                    android:layout_below="@id/endLayout"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/otherKnowledge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/knowledgeImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/home_work_24"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="সাধারণ জ্ঞান"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                android:maxLines="1"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/nameBImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/home_work_24"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="নাম সমূহ"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/janeRakho"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/janeRakhoImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/home_work_24"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="উক্তি ও বাণী"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/myself"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:id="@+id/selfImage"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/home_work_24"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="সংরক্ষণ করুন"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>